<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <CustomLevels>
        <CustomLevel name="HTTP" intLevel="450"/>
        <CustomLevel name="BENCHMARK" intLevel="350"/>
        <CustomLevel name="TIMER" intLevel="450"/>
    </CustomLevels>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss:SSS} %-5level %logger{36} - %msg%n"/>
        </Console>
        <File name="LogFile" fileName="logs/api.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyyy/MM/dd HH:mm:ss:SSS} %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" level="info"/>
            <AppenderRef ref="LogFile"/>
        </Root>
    </Loggers>
</Configuration>
